# Application Settings
APP_NAME=Postprocess API
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fedfina_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=fedfina-reports
MINIO_SECURE=false
MINIO_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Postprocess API
SMTP_USE_TLS=true

# API Security
API_SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=10
DOWNLOAD_TOKEN_EXPIRY_HOURS=24
DOWNLOAD_TOKEN_MAX_USES=10

# Processing Settings
MAX_FILE_SIZE_MB=10
PROCESSING_TIMEOUT_MINUTES=10
ENABLE_AUDIO_STORAGE=true
ENABLE_TRANSCRIPT_STORAGE=true
ENABLE_REPORT_GENERATION=true

# File Retention
FILE_RETENTION_DAYS=30
AUDIT_LOG_RETENTION_DAYS=90

# Timezone Configuration
DEFAULT_TIMEZONE=Asia/Kolkata
TIMEZONE_OFFSET_HOURS=5
TIMEZONE_OFFSET_MINUTES=30
BUSINESS_START_HOUR=9
BUSINESS_END_HOUR=18
ENABLE_IST_TIMEZONE=true
SHOW_TIMEZONE_INFO=true

# Testing Configuration (Temporarily disable email for testing)
DISABLE_EMAIL_SENDING=true

# Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/postprocess_api.log
