# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
ENV=development

# API Configuration
API_SECRET_KEY=development-secret-key-change-in-production
DOWNLOAD_TOKEN_EXPIRY_HOURS=24

# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/fedfina
POSTGRES_DB=fedfina
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# AI Services (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# MinIO Object Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=true

# Callback Configuration
CALLBACK_ENABLED=true
CALLBACK_URL=https://hr.fedfina.com/salespd/api/saveVoicePD
CALLBACK_TIMEOUT_SECONDS=30

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Redis Configuration
REDIS_URL=redis://redis:6379

# Model Storage Path
MODELS_PATH=/Volumes/ssd/models
